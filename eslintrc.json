{
  "plugins": [
    "es",
    "import",
    "mocha",
    "promise",
    "security",
    "unicorn"
  ],
  "extends": [
    "standard",
    "plugin:security/recommended",
    "plugin:mocha/recommended",
    "plugin:unicorn/recommended",
    "plugin:promise/recommended",
    "@voxpelli/eslint-config-jsdoc-ts"
  ],
  "root": true,
  "rules": {
    "semi": ["error", "always"],
    "no-extra-semi": "error",

    "comma-dangle": ["warn", {
      "arrays": "ignore",
      "objects": "ignore",
      "imports": "ignore",
      "exports": "ignore",
      "functions": "never"
    }],
    "no-multi-spaces": ["error", {"ignoreEOLComments": true}],
    "no-unused-vars": ["error", {"vars": "all", "args": "after-used", "ignoreRestSiblings": true}],
    "quotes": ["error", "single", { "avoidEscape": true, "allowTemplateLiterals": true }],
    "node/no-deprecated-api": "warn",

    "func-style": ["warn", "expression", { "allowArrowFunctions": true }],
    "no-console": "warn",
    "no-warning-comments": ["warn", { "terms": ["fixme"] }],
    "object-shorthand": ["error", "always", { "avoidExplicitReturnArrows": true, "avoidQuotes": true }],
    "quote-props": ["error", "as-needed", { "keywords": true, "numbers": true, "unnecessary": false }],

    "es/no-exponential-operators": "warn",

    "mocha/no-mocha-arrows": "off",

    "promise/always-return": "off",
    "promise/no-callback-in-promise": "off",
    "promise/no-nesting": "off",

    "security/detect-object-injection": "off",
    "security/detect-unsafe-regex": "off",

    "unicorn/catch-error-name": ["error", {"name": "err"}],
    "unicorn/consistent-function-scoping": "off",
    "unicorn/explicit-length-check": "off",
    "unicorn/filename-case": "off",
    "unicorn/prefer-add-event-listener": "warn",
    "unicorn/prefer-spread": "warn",
    "unicorn/prevent-abbreviations": "off"
  }
}
