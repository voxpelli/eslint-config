{
  "extends": [
    "github>voxpelli/renovate-config:base",
    ":semanticCommits"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "extends": [
      "github>voxpelli/renovate-config:schedule"
    ]
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "semanticCommitType": "chore"
    },
    {
      "matchDepTypes": [
        "peerDependencies"
      ],
      "rangeStrategy": "bump",
      "semanticCommitScope": "",
      "semanticCommitType": "chore!"
    },
    {
      "matchDepTypes": [
        "peerDependencies"
      ],
      "matchUpdateTypes": ["major"],
      "semanticCommitScope": "",
      "semanticCommitType": "feat!"
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchPackagePrefixes": [
        "@commitlint"
      ],
      "groupName": "commitlint"
    }
  ]
}
